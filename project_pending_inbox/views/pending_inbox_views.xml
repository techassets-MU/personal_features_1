<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_pending_inbox_list" model="ir.ui.view">
        <field name="name">project.pending.inbox.list</field>
        <field name="model">project.pending.inbox</field>
        <field name="arch" type="xml">
            <list string="Pendientes indefinidos" default_order="sequence, create_date desc">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="type"/>
                <field name="priority_quadrant"/>
                <field name="user_id"/>
                <field name="done"/>
                <field name="task_id"/>
                <field name="project_id"/>
            </list>
        </field>
    </record>

    <record id="view_project_pending_inbox_kanban" model="ir.ui.view">
        <field name="name">project.pending.inbox.kanban</field>
        <field name="model">project.pending.inbox</field>
        <field name="arch" type="xml">
            <kanban default_group_by="priority_quadrant" class="o_kanban_small_column">
                <field name="name"/>
                <field name="type"/>
                <field name="priority_quadrant"/>
                <field name="done"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <span class="o_kanban_record_title">
                                    <t t-esc="record.name.value"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <strong>Tipo:</strong>
                                    <t t-esc="record.type.value or '-'"/>
                                </div>
                                <div>
                                    <strong>Prioridad:</strong>
                                    <t t-esc="record.priority_quadrant.value"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_project_pending_inbox_form" model="ir.ui.view">
        <field name="name">project.pending.inbox.form</field>
        <field name="model">project.pending.inbox</field>
        <field name="arch" type="xml">
            <form string="Pendiente indefinido">
                <header>
                    <button name="action_convert_to_task" type="object" string="Crear Tarea" class="btn-primary" invisible="type != 'task' or task_id"   />
                    <button name="action_convert_to_project" type="object" string="Crear Proyecto" class="btn-secondary" invisible="type != 'project' or project_id"   />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="type" readonly="task_id or project_id"/>
                            <field name="priority_quadrant"/>
                            <field name="user_id"/>
                            <field name="done"/>
                        </group>
                        <group>
                            <field name="task_deadline" required="type == 'task' and priority_quadrant in ('do', 'delegate')"/>
                            <field name="project_company_id" invisible="type != 'project'"/>
                            <field name="task_id" readonly="1"/>
                            <field name="project_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_pending_inbox" model="ir.actions.act_window">
        <field name="name">Pendientes indefinidos</field>
        <field name="res_model">project.pending.inbox</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>Use esta bandeja de entrada para capturar ideas y luego decidir si son Tareas o Proyectos.</p>
        </field>
    </record>

    <record id="view_project_pending_inbox_search" model="ir.ui.view">
        <field name="name">project.pending.inbox.search</field>
        <field name="model">project.pending.inbox</field>
        <field name="arch" type="xml">
            <search string="Buscar Pendientes">
                <field name="name"/>
                <filter name="archived" string="Archivados" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>


