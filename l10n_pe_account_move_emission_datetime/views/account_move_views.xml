<odoo>
  <data>
    <record id="view_move_form_inherit_emission_datetime" model="ir.ui.view">
      <field name="name">account.move.form.emission.datetime.pe</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_date']" position="replace">
          <field name="x_date_time_issuance" string="Fecha de emisión"/>
        </xpath>
      </field>
    </record>

    <record id="view_out_invoice_list_inherit_emission_datetime" model="ir.ui.view">
      <field name="name">account.move.list.out_invoice.emission.datetime.pe</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_out_invoice_tree"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_date']" position="replace">
          <field name="x_date_time_issuance" string="Fecha de emisión"/>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
